// Obtener el enlace de inicio de sesi贸n
const loginLink = document.getElementById('loginLink');

// Agregar evento de clic al enlace
loginLink.addEventListener('click', (event) => {
  event.preventDefault(); // Evitar que el enlace se comporte normalmente
  
  // Mostrar el formulario de inicio de sesi贸n
  showLoginForm();
});

function showLoginForm() {
  // Obtener el contenedor del formulario de inicio de sesi贸n
  const loginContainer = document.querySelector('.login-container');
  
  // Mostrar el contenedor del formulario de inicio de sesi贸n
  loginContainer.style.display = 'block';
}